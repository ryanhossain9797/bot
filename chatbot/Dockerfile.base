# Base image with runtime dependencies and model
# Always build for linux/amd64 (x86_64)
FROM debian:trixie-slim

# Set working directory
WORKDIR /app

# Copy model file (large, rarely changes)
COPY models/GLM-4-32B-0414-Q8_0-matteov2.gguf /app/models/GLM-4-32B-0414-Q8_0-matteov2.gguf
COPY models/Qwen2.5-Coder-14B-Instruct-Q4_K_M.gguf /app/models/Qwen2.5-Coder-14B-Instruct-Q4_K_M.gguf
ENV THINKING_MODEL_PATH=/app/models/GLM-4-32B-0414-Q8_0-matteov2.gguf
ENV EXECUTOR_MODEL_PATH=/app/models/Qwen2.5-Coder-14B-Instruct-Q4_K_M.gguf

# Copy FastEmbed cache
COPY .fastembed_cache* /app/.fastembed_cache

# Copy grammar file
COPY grammars/ /app/grammars/

ENV RUST_LOG=info

# Update package list and install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    libgomp1 \
    libvulkan1 \
    mesa-vulkan-drivers \
    vulkan-tools \
    && (getent group render || groupadd -r render) \
    && rm -rf /var/lib/apt/lists/*

# Install golang, build reader, then remove golang
RUN apt-get update && apt-get install -y \
    golang-go \
    git \
    && go install github.com/mrusme/reader@latest \
    && mkdir -p /app/resources \
    && cp /root/go/bin/reader /app/resources/reader \
    && apt-get remove -y golang-go git \
    && apt-get autoremove -y \
    && rm -rf /var/lib/apt/lists/* /root/go /usr/local/go
